//Faça um Programa que peça um valor e mostre na tela se o valor é positivo ou negativo.

#include<stdio.h>
int main(){
    int a,b;
    
    printf("Digite um numero: ");
    scanf("%d", &a);
    
    if (a >= 0) {
    printf ("O numero é positivo");

}else{

printf ("O numero é negativo");

}
    
    return 0;
}
